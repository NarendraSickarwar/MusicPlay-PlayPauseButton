<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/shuffel_chkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shuffel_background_drawable"
                android:button="@null"
                android:clickable="true" />

            <ImageView
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/play_pause_view"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@drawable/previous_button_background" />

            <com.narendra.example.playpauseanimation.PlayPauseView
                android:id="@+id/play_pause_view"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_centerInParent="true"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:stateListAnimator="@anim/button_elevation" />

            <ImageView
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/play_pause_view"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:src="@drawable/next_button_background" />

            <CheckBox
                android:id="@+id/rotation_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/play_pause_view"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rotation_background_drawable"
                android:button="@null"
                android:clickable="true" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
